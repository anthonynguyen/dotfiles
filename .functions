git_branch() {
	ref=$(git symbolic-ref HEAD | cut -d'/' -f3)
	echo $ref
}

prompt_git() {
	if git branch >/dev/null 2>/dev/null; then
		echo " Â± [$(git_branch)]"
	else
		echo ""
	fi
}

setprompt() {
	PROMPT="%B%{%F{yellow}%}$(prompt_git)%f%{%F{cyan}%} %~:%f%b "
}


precmd () {
	setprompt
	print -Pn "\e]0;%n: %~\a"
}

mke() {
	mkdir -p "$1" && cd "$1"
}

ws() {
	ia () {
		if pidof "$1" > /dev/null
		then
			echo -e "[\033[1;32mON\033[0m]  $2"
		else
			echo -e "[\033[1;31mOFF\033[0m] $2"
		fi
	}

	ia httpd Apache
	ia mysqld MySQL
}

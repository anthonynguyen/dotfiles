#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + c
	bspc window -c

super + t
	bspc window -t private

super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

super + {_,shift + }Tab
	bspc window -f {next,prev}

super + {_,shift +,ctrl +}{Left,Right,Up,Down}
	bspc window -{f,s,p} {left,right,up,down}

super + alt + {Left,Right,Up,Down}
	bspc window -e {left -10,right +10,up -10,down +10}

super + alt + shift + {Left,Right,Up,Down}
	bspc window -e {right -10,left +10,down -10,up +10}

super + ctrl + space
	bspc desktop -c

super + grave
	bspc desktop -f last 

super + m
	bspc window -s biggest

super + {comma,period}
	bspc desktop -C {backward,forward}

super + p
	bspc desktop -R 90

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

F1
	urxvt

ctrl + space
	j4-dmenu-desktop --dmenu="dmenu -i -b -p 'Run:' -fn '-*-Terminus-medium-r-*-*-*-*-*-*-*-*-*-*' -nb '#222' -sb '#cc4444'"

XF86AudioMute
	amixer sset Master toggle

XF86AudioRaiseVolume
	amixer set Master 3%+

XF86AudioLowerVolume
	amixer set Master 3%-

XF86AudioPlay
	ncmpcpp toggle

XF86AudioStop
	ncmpcpp stop

XF86AudioPrev
	ncmpcpp prev

XF86AudioNext
	ncmpcpp next


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
